# Local Sync Database (PostgreSQL)
POSTGRES_SYNC_HOST=localhost
POSTGRES_SYNC_PORT=5432
POSTGRES_SYNC_DB=sync_db
POSTGRES_SYNC_USER=postgres
POSTGRES_SYNC_PASSWORD=your_password

# Remote Client Database (PostgreSQL)
POSTGRES_CLIENT_HOST=localhost
POSTGRES_CLIENT_PORT=5432
POSTGRES_CLIENT_DB=client_db
